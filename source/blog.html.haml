- content_for(:title, "Blog - Discover Meteor")

%section#blog
  %h3
    The blog
    %a.rss{:href => '/feed.xml'} [RSS]
  .articles
    - blog.articles.each do |post|
      .post.inverted
        .post-top
          .date
            =post.date.strftime('%b %e %Y')
        .post-content
          .post-thumbnail
            %a{:href => post.url}
              - if post.data.thumb
                %img.thumb{:src => "/images/blog/"+post.data.thumb}
              - else
                %span.thumb.default-thumb
          .summary

            %h2.post-title
              %a{:href => post.url}
                =post.title
            =post.summary
