- content_for(:title, "Telescope Showcase")

%section.showcase
  .page-title
    %h3.main-title Showcase
    %h4.sub-title A selection of sites using Telescope
  .sites
    - data.showcase.reverse_each do |site|
      .site
        .screenshot
          %a{:href => site.url}
            %img{ :src=> '/images/showcase/'+site.screenshot}
        .description
          %h4.title
            %a{:href => site.url}=site.title
          %p
            :markdown
              #{site.description}
              â€“ [View on GitHub](#{site.repo})

