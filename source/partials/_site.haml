.site
  .site-screenshot
    %a{:href => site.url}
      %img{ :src=> '/images/showcase/'+site.screenshot}
  .site-content
    %h4.site-title
      %a{:href => site.url}=site.title
    .site-description
      :markdown
        #{site.description}
    .site-actions
    - if type == "plugins"
      %a.button-simple{href: site.demo} View Demo
      %a.button-simple{href: site.url} Get It

    - elsif type == "examples"
      %a.button-simple{href: site.url} Launch Site
      / %a.button-simple{href: site.repo} Get Code

    - elsif type == "showcase"
      / nothing

    - elsif type == "themes"
      %a.button-simple{href: site.demo} View Demo
      %a.button-simple{href: site.url} Get It

